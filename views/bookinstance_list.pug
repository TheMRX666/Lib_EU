extends layout

block content
  h1.pt-4= title

  if bookinstance_list.length
    ul.bookinstance-list
      each val in bookinstance_list
        li
          strong #{val.book.title}
            span.status(class=statusClass(val.status)) &nbsp;- #{val.status}
              if val.status !== 'Available'
                span.due-back &nbsp; | Due: #{val.due_back_formatted}

  else
    p Копій книг немає.
